extends ../layout 

block content
    h1 add shop
    form(action="/shopname/add", method="post")
        .form-group
            label(for="shopname") Shop Name
            input#shopname(type="text" ,class="form-control" ,name="shopname")
        .form-group
            label(for="productname") Product Name
            input#productname(type="text" ,class="form-control",name="productname")
        .form-group
            label(for="quantity") Quantity
            input#quantity(type="test" ,class="form-control",name="quantity")
        .form-group
            label(for="address") Address
            input#address(type="text" ,class="form-control",name="address")
        input(type="submit" ,class="btn btn-info")